{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TextGO",
  "version": "0.3.6",
  "identifier": "top.xylitol.textgo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": false,
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "TextGO",
        "width": 800,
        "height": 648,
        "minWidth": 600,
        "minHeight": 300,
        "visible": false,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 16, "y": 18 }
      },
      {
        "label": "popup",
        "url": "/popup",
        "width": 400,
        "height": 300,
        "visible": false,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "resizable": false
      },
      {
        "label": "toolbar",
        "url": "/toolbar",
        "width": 1000,
        "height": 50,
        "visible": false,
        "shadow": false,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "resizable": false,
        "focusable": false,
        "focus": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app", "dmg"],
    "icon": ["icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
