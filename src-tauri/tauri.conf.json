{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TextGO",
  "version": "1.0.1",
  "identifier": "top.xylitol.textgo",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Main",
        "width": 755,
        "height": 805,
        "minWidth": 755,
        "minHeight": 565,
        "visible": false,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 16, "y": 20 }
      },
      {
        "label": "popup",
        "title": "Popup",
        "url": "/popup",
        "width": 400,
        "height": 300,
        "minWidth": 400,
        "minHeight": 300,
        "visible": false,
        "skipTaskbar": true,
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": { "x": 10, "y": 14 }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "app", "dmg"],
    "icon": ["icons/icon.icns", "icons/icon.ico"],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
